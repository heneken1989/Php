@model IEnumerable<ASP.NETCoreIdentityCustom.ViewModels.BlogViewModel>
@{
    ViewData["Title"] = "Blog";
}
<head>
		<!-- Favicon -->
	<link rel="shortcut icon" type="image/x-icon" href="/~/blog/images/favicon.ico" />
	<!-- bootstrap.min css -->
	<link rel="stylesheet" href="~/blog/plugins/bootstrap/css/bootstrap.min.css">
	<!-- Icon Font Css -->
	<link rel="stylesheet" href="~/blog/plugins/icofont/icofont.min.css">
	<!-- Slick Slider  CSS -->
	<link rel="stylesheet" href="~/blog/plugins/slick-carousel/slick/slick.css">
	<link rel="stylesheet" href="~/blog/plugins/slick-carousel/slick/slick-theme.css">
	<!-- Main Stylesheet -->
	<link rel="stylesheet" href="css/style.css">
</head>

<body id="top">


	<section class="page-title bg-1">
		<div class="overlay"></div>
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<div class="block text-center">
						<span class="text-white">Our blog</span>
						<h1 class="text-capitalize mb-5 text-lg">Blog articles</h1>

			
					</div>
				</div>
			</div>
		</div>
	</section>


	<section class="section blog-wrap">
		<div class="container">
			<div class="row">
				<div class="col-lg-8">
					<div class="row">

						@foreach(var item in Model)

						{
								<div class="col-lg-12 col-md-12 mb-5">
							<div class="blog-item">
								<div class="blog-thumb">
									<img src="~/images/@item.ImageUrl" alt="" class="img-fluid ">
								</div>

								<div class="blog-item-content">
									<div class="blog-item-meta mb-3 mt-4">
											<span class="text-muted text-capitalize mr-3"><i class="icofont-comment mr-2"></i>@(item.User?.FullName ?? "No User")</span>
										<span class="text-muted text-capitalize mr-3"><i class="icofont-comment mr-2"></i>5 Comments</span>
										<span class="text-black text-capitalize mr-3"><i class="icofont-calendar mr-1"></i>@item.CreatedAt</span>
									</div>

									<h2 class="mt-3 mb-3"><a href="blog-single.html">@item.Title</a></h2>

										<p class="mb-4">@Html.Raw((item.Content != null && item.Content.Length >= 300 ? item.Content.Substring(0, 300) : item.Content))</p>
										
										<a asp-action="SingleBlog" asp-route-id="@item.Id" target="_blank" class="btn btn-main btn-icon btn-round-full">Read More <i class="icofont-simple-right ml-2  "></i></a>
								</div>
							</div>
						</div>	
						}
					

			

					
					</div>
				</div>
				<div class="col-lg-4">
					<div class="sidebar-wrap pl-lg-4 mt-5 mt-lg-0">
						<div class="sidebar-widget search  mb-3 ">
							<h5>Search Here</h5>
							<form action="#" class="search-form">
								<input type="text" class="form-control" placeholder="search">
								<i class="ti-search"></i>
							</form>
						</div>


						<div class="sidebar-widget latest-post mb-3">
							<h5>Popular Posts</h5>

							<div class="py-2">
								<span class="text-sm text-muted">03 Mar 2018</span>
								<h6 class="my-2"><a href="#">Thoughtful living in los Angeles</a></h6>
							</div>

							<div class="py-2">
								<span class="text-sm text-muted">03 Mar 2018</span>
								<h6 class="my-2"><a href="#">Vivamus molestie gravida turpis.</a></h6>
							</div>

							<div class="py-2">
								<span class="text-sm text-muted">03 Mar 2018</span>
								<h6 class="my-2"><a href="#">Fusce lobortis lorem at ipsum semper sagittis</a></h6>
							</div>
						</div>

						<div class="sidebar-widget category mb-3">
							<h5 class="mb-4">Categories</h5>

							<ul class="list-unstyled">
								<li class="align-items-center">
									<a href="#">Medicine</a>
									<span>(14)</span>
								</li>
								<li class="align-items-center">
									<a href="#">Equipments</a>
									<span>(2)</span>
								</li>
								<li class="align-items-center">
									<a href="#">Heart</a>
									<span>(10)</span>
								</li>
								<li class="align-items-center">
									<a href="#">Free counselling</a>
									<span>(5)</span>
								</li>
								<li class="align-items-center">
									<a href="#">Lab test</a>
									<span>(5)</span>
								</li>
							</ul>
						</div>


						<div class="sidebar-widget tags mb-3">
							<h5 class="mb-4">Tags</h5>

							<a href="#">Doctors</a>
							<a href="#">agency</a>
							<a href="#">company</a>
							<a href="#">medicine</a>
							<a href="#">surgery</a>
							<a href="#">Marketing</a>
							<a href="#">Social Media</a>
							<a href="#">Branding</a>
							<a href="#">Laboratory</a>
						</div>
					</div>
				</div>
			</div>

			<div class="row mt-5">
				<div class="col-lg-8">
					<nav class="pagination py-2 d-inline-block">
						<div class="nav-links">
							<span aria-current="page" class="page-numbers current">1</span>
							<a class="page-numbers" href="#">2</a>
							<a class="page-numbers" href="#">3</a>
							<a class="page-numbers" href="#"><i class="icofont-thin-double-right"></i></a>
						</div>
					</nav>
				</div>
			</div>
		</div>
	</section>

	<!-- footer Start -->
	<!--
	Essential Scripts
	=====================================-->
	<!-- Main jQuery -->
	<script src="~/blog/plugins/jquery/jquery.js"></script>
	<!-- Bootstrap 4.3.2 -->
	<script src="~/blog/plugins/bootstrap/~/blog/js/popper.js"></script>
	<script src="~/blog/plugins/bootstrap/~/blog/js/bootstrap.min.js"></script>
	<script src="~/blog/plugins/counterup/jquery.easing.js"></script>
	<!-- Slick Slider -->
	<script src="~/blog/plugins/slick-carousel/slick/slick.min.js"></script>
	<!-- Counterup -->
	<script src="~/blog/plugins/counterup/jquery.waypoints.min.js"></script>

	<script src="~/blog/plugins/shuffle/shuffle.min.js"></script>
	<script src="~/blog/plugins/counterup/jquery.counterup.min.js"></script>
	<script src="~/blog/js/script.js"></script>
	<script src="~/blog/js/contact.js"></script>

</body>

